{
  "manifest_version": 3,
  "name": "Lynx Go Links",
  "version": "1.0.0",
  "description": "Chrome extension for managing Lynx go links",
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "http://*/",
    "https://*/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/lynx-16.png",
      "32": "icons/lynx-32.png",
      "48": "icons/lynx-48.png",
      "128": "icons/lynx-128.png"
    }
  },
  "icons": {
    "16": "icons/lynx-16.png",
    "32": "icons/lynx-32.png",
    "48": "icons/lynx-48.png",
    "128": "icons/lynx-128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
